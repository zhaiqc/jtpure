<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_cash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.pure.purelive.ui.customviews.ActivityTitle
        android:id="@+id/view_title"
        android:background="@color/graywhite"
        app:titleColor="@color/black"
        app:titleText="@string/cash"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pure.purelive.widget.BlackTextView
            android:layout_marginLeft="10dp"
            android:text="@string/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />

        <com.pure.purelive.widget.BlackEditText
            android:inputType="number"
            android:maxLength="9"
            android:layout_height="50dp"
            android:id="@+id/et_cash_num"
            android:textColorHint="#E2E2E5"
            android:background="@null"
            android:hint="@string/cash_money"
            android:layout_width="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>

    <com.pure.purelive.widget.BlackButton
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:text="@string/cash"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:id="@+id/btn_request_cash"
        android:background="@drawable/btn_common"
        android:layout_marginTop="16dp" />

</LinearLayout>
